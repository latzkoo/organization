<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_700"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/detailTitleTextView"
                android:layout_weight="100"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textSize="20sp"
                android:text="@string/details"
                android:textColor="@color/white"
                android:padding="@dimen/padding" />

        <ImageButton
                android:backgroundTint="@color/teal_700"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_edit"
                android:onClick="editOrganization"
                android:clickable="true"
                android:focusable="true" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/identifier"
                        android:fontFamily="sans-serif-medium"
                        android:paddingRight="@dimen/paddingHalf" />

                <TextView
                        android:id="@+id/organizationIdentifierTextView"
                        android:textSize="14sp"
                        android:layout_weight="2"
                        android:text="@string/notFilled"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/paddingHalf" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/name"
                        android:fontFamily="sans-serif-medium"
                        android:paddingRight="@dimen/paddingHalf" />

                <TextView
                        android:id="@+id/organizationNameTextView"
                        android:textSize="14sp"
                        android:layout_weight="2"
                        android:text="@string/notFilled"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/paddingHalf" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/alias"
                        android:fontFamily="sans-serif-medium"
                        android:paddingRight="@dimen/paddingHalf" />

                <TextView
                        android:id="@+id/organizationAliasTextView"
                        android:textSize="14sp"
                        android:layout_weight="2"
                        android:text="@string/notFilled"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/paddingHalf" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/address"
                        android:fontFamily="sans-serif-medium"
                        android:paddingRight="@dimen/paddingHalf" />

                <TextView
                        android:id="@+id/organizationAddressTextView"
                        android:textSize="14sp"
                        android:layout_weight="2"
                        android:text="@string/notFilled"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/paddingHalf" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/contact"
                        android:fontFamily="sans-serif-medium"
                        android:paddingRight="@dimen/paddingHalf" />

                <TextView
                        android:id="@+id/organizationContactTextView"
                        android:textSize="14sp"
                        android:layout_weight="2"
                        android:text="@string/notFilled"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/paddingHalf" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/telecom"
                        android:fontFamily="sans-serif-medium"
                        android:paddingRight="@dimen/paddingHalf" />

                <TextView
                        android:id="@+id/organizationTelecomTextView"
                        android:textSize="14sp"
                        android:layout_weight="2"
                        android:text="@string/notFilled"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/paddingHalf" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/endpoint"
                        android:fontFamily="sans-serif-medium"
                        android:paddingRight="@dimen/paddingHalf" />

                <TextView
                        android:id="@+id/organizationEndpointTextView"
                        android:textSize="14sp"
                        android:layout_weight="2"
                        android:text="@string/notFilled"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/paddingHalf" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/status"
                        android:fontFamily="sans-serif-medium"
                        android:paddingRight="@dimen/paddingHalf" />

                <TextView
                        android:id="@+id/organizationActiveTextView"
                        android:textSize="14sp"
                        android:layout_weight="2"
                        android:text="@string/inactive"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/paddingHalf" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding"
                android:layout_marginTop="@dimen/padding">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:textSize="14sp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:text="@string/type"
                        android:fontFamily="sans-serif-medium"
                        android:paddingRight="@dimen/paddingHalf" />

                <TextView
                        android:id="@+id/organizationTypeTextView"
                        android:textSize="14sp"
                        android:layout_weight="2"
                        android:text="@string/notFilled"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:paddingLeft="@dimen/paddingHalf" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>